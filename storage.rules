rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to access their own profile images
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow access to ride-related files
    match /rides/{rideId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                    (request.auth.uid != null && 
                     (request.resource.metadata.passengerId == request.auth.uid ||
                      request.resource.metadata.driverId == request.auth.uid));
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
